// using Array or Map to pass parameters which may change in the thread

ex := import("ex")

sourceT := `
param (v0)

for {
	v0[0] ++

	pl("(thread) v0=%v", v0[0])

	sleep(1.0)
}

return

`

c1 := ex.compile(sourceT)

plo(c1)

a := [5]

ex.goRunCompiled(c1, a)

for {
	a[0] += 10

	pl("(main) a=%v", a[0])

	sleep(1.0)
}

